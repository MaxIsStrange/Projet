<section class="section">
    <!-- Entête de l'offre -->
    <div>
      <h1 class="title is-1">
        <a href="#">{{result.Nom_offre}}</a>
      </h1>
      <h2 class="subtitle is-2">
        <a href="#">{{result.Nom_poste_offre}}</a>
      </h2>
      <div class="info-entreprise" style="margin-bottom: 1rem">
        <p id="nomEntreprise" class="is-size-5" style="margin-bottom: 0;">
        <article class="media">
          <figure class="media-left">
            <p class="image is-64x64 is-rounded">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="Logo entreprise">
            </p>
          </figure>
          <div class="media-content">
            <div class="content">
              <a href="#"><strong>{{result.Nom_ent}}</strong></a>
              <p id="location" class="is-size-5">
                {{result.CP_adr}} {{result.Ville_adr}}
              </p>
            </div>
          </div>
        </article>
        </p>
      </div>
      <div class="buttons">
        <div class="button is-link">Postuler à l'offre</div>
        <div class="button is-light">
          <figure class="icon">
            <i class="fa-regular fa-heart"></i>
          </figure>
        </div>
      </div>
    </div>
    <div class="is-divider"></div>
    <!-- Corps de l'offre -->
    <div>
      <section class="section">
        <div class="content">
          <h2>Description</h2>
          {{result.Desc_ent}}
          <h2>Informations complémentaires</h2>
          <ul>
            <li>Durée du stage: {{result.Duree_offre}}</li>
            <li>Cible: {{result.Promo_offre}}</li>
            <li>Renumération: {{result.Remun_offre}}</li>
            <li>Poste à pourvoir: {{result.Nb_poste_offre}}</li>
          </ul>
          <br>
          <p>Offre postée le <time datetime="2016-01-01">{{result.Date_offre}}</time></p>
        </div>
      </section>
    </div>

  </section>